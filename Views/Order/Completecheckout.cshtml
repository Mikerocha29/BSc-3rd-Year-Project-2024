@model Order

<div class="Container">

    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompleteMessage</h2>
    </div>


    <div class="card">
        <div class="card-body">
            <p>Costumer : <strong>@Model.FirstName</strong>
            <p>Order of Date  :  <strong>@Model.OrderSent</strong>
            <p>Order of Number   : <strong>@Model.OrderId</strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantity</th>
                    <th>Supplement</th>
                    <th>Price</th>
                </tr>
                        @foreach (var item in Model.OrderItems)
                  {
                    <tr>
                        <td><img src="@item.Supplement.ImageUrl" width="40" height="40" /></td>
                        <td>@item.Quantity</td>
                        <td>@item.Supplement.Name</td>
                        <td>@item.Supplement.Price</td>
                    </tr>
                  }
            </table>

            <h4> Sub Total Order : <strong>@(((decimal)ViewBag.OrderTotal).ToString("C"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align :center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Return</a>
    </h3>


</div>